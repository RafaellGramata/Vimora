<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top image (e.g., Forgot Password) -->

    <!-- Decorative / background image -->

    <TextView
        android:id="@+id/signupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="104dp"
        android:text="@string/signupLabel"
        android:textColor="#0091EA"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signupNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="246dp"
        android:layout_marginBottom="32dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/signupName"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toTopOf="@+id/signupPhoneLabel"
        app:layout_constraintStart_toStartOf="@+id/signupNameLabel"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/signupPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/signupPhone"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toTopOf="@+id/signupEmail"
        app:layout_constraintStart_toStartOf="@+id/signupPhoneLabel"
        app:layout_constraintTop_toBottomOf="@+id/signupPhoneLabel"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TextFields" />

    <TextView
        android:id="@+id/signupNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="181dp"
        android:text="@string/signupNameLabel"
        app:layout_constraintBottom_toTopOf="@+id/signupEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupLabel" />

    <TextView
        android:id="@+id/signupPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="53dp"
        android:text="@string/signupPhone"
        app:layout_constraintBottom_toTopOf="@+id/signupPhone"
        app:layout_constraintEnd_toEndOf="@+id/signupName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupName" />

    <ImageView
        android:id="@+id/signupSubmit"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:contentDescription="@string/signupSubmitDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupPassword"
        app:srcCompat="@drawable/signup" />

    <TextView
        android:id="@+id/signupEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:text="@string/signupEmail"
        app:layout_constraintBottom_toTopOf="@+id/signupPasswordLabel"
        app:layout_constraintStart_toStartOf="@+id/signupPhone"
        app:layout_constraintTop_toBottomOf="@+id/signupNameLabel" />

    <EditText
        android:id="@+id/signupEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/signupEmail"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toTopOf="@+id/signupPassword"
        app:layout_constraintStart_toStartOf="@+id/signupEmailLabel"
        app:layout_constraintTop_toBottomOf="@+id/signupPhone"
        tools:ignore="DuplicateSpeakableTextCheck,TextFields"
        tools:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/signupPasswordLabel"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginBottom="187dp"
        android:autofillHints=""
        android:text="@string/signuPasswordLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/signupPassword"
        app:layout_constraintTop_toBottomOf="@+id/signupEmailLabel"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/signupPassword"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toTopOf="@+id/signupSubmit"
        app:layout_constraintEnd_toStartOf="@+id/signupSubmit"
        app:layout_constraintStart_toStartOf="@+id/signupSubmit"
        app:layout_constraintTop_toBottomOf="@+id/signupEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>
