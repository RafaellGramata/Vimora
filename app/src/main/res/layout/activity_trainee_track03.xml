<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6501"
    tools:context=".trainee.TraineeTrackActivity03">

    <!-- Reminder Button -->
    <ImageButton
        android:id="@+id/btnReminder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:background="#00FFFFFF"
        android:contentDescription="reminder"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reminder"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Background Cards -->
    <ImageView
        android:id="@+id/imagePlanBack3"
        android:layout_width="380dp"
        android:layout_height="680dp"
        android:layout_marginTop="88dp"
        android:contentDescription="PlanBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plan" />

    <ImageView
        android:id="@+id/imageprofileBack3"
        android:layout_width="0dp"
        android:layout_height="680dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="ProfileBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePlanBack3"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageTrackBack3"
        android:layout_width="380dp"
        android:layout_height="680dp"
        android:layout_marginTop="64dp"
        android:contentDescription="TrackBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageprofileBack3"
        app:srcCompat="@drawable/track" />

    <!-- Navigation Buttons -->
    <Button
        android:id="@+id/btnPlanOfTrack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:text="PLAN"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePlanBack3" />

    <Button
        android:id="@+id/btnProfileOfTrack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:text="PROFILE"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageprofileBack3" />

    <Button
        android:id="@+id/btnTrackOfTrack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:text="TRACK"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageTrackBack3" />

    <!-- Back and Meal Buttons -->
    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:contentDescription="back"
        android:scaleType="fitCenter"
        android:src="@drawable/backhome"
        app:layout_constraintBottom_toBottomOf="@+id/btnTrackOfTrack2"
        app:layout_constraintEnd_toStartOf="@+id/btnTrackOfTrack2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnTrackOfTrack2"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnMeal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:contentDescription="meal"
        android:scaleType="fitCenter"
        android:src="@drawable/meal"
        app:layout_constraintBottom_toBottomOf="@+id/btnTrackOfTrack2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTrackOfTrack2"
        app:layout_constraintTop_toTopOf="@+id/btnTrackOfTrack2"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Black Card -->
    <ImageView
        android:id="@+id/imageTrackBlack"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/blackcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrackOfTrack2" />

    <!-- Month Navigation -->
    <TextView
        android:id="@+id/btnPreviousMonth"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="&lt;"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txtMonthYear"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageTrackBlack" />

    <TextView
        android:id="@+id/txtMonthYear"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="2025-10"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnNextMonth"
        app:layout_constraintStart_toEndOf="@+id/btnPreviousMonth"
        app:layout_constraintTop_toTopOf="@+id/imageTrackBlack" />

    <TextView
        android:id="@+id/btnNextMonth"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="&gt;"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMonthYear"
        app:layout_constraintTop_toTopOf="@+id/imageTrackBlack" />

    <!-- Monthly Statistics Title -->
    <TextView
        android:id="@+id/txtInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Monthly Statistics"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMonthYear" />

    <!-- Workout Start Date Label -->
    <TextView
        android:id="@+id/txtWorkoutStartLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Workout Start Date"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/trainerDateMonthly"
        app:layout_constraintTop_toBottomOf="@+id/txtInformation" />

    <!-- Workout Start Date Value (READ-ONLY) -->
    <TextView
        android:id="@+id/trainerDateMonthly"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:hint="Start Date"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageTrackBlack"
        app:layout_constraintStart_toStartOf="@+id/imageTrackBlack"
        app:layout_constraintTop_toBottomOf="@+id/txtWorkoutStartLabel" />

    <!-- Calories Burned Label -->
    <TextView
        android:id="@+id/txtCaloriesMonthlyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calories Burned (AVG/day)"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/trainerCaloriesMonthly"
        app:layout_constraintTop_toBottomOf="@+id/trainerDateMonthly" />

    <!-- Calories Burned Value (READ-ONLY) -->
    <TextView
        android:id="@+id/trainerCaloriesMonthly"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:hint="Calories Burned"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageTrackBlack"
        app:layout_constraintStart_toStartOf="@+id/imageTrackBlack"
        app:layout_constraintTop_toBottomOf="@+id/txtCaloriesMonthlyLabel" />

    <!-- Duration Label -->
    <TextView
        android:id="@+id/txtDurationMonthlyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Duration (AVG/day)"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/trainerDurationMonthly"
        app:layout_constraintTop_toBottomOf="@+id/trainerCaloriesMonthly" />

    <!-- Duration Value (READ-ONLY) -->
    <TextView
        android:id="@+id/trainerDurationMonthly"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:hint="Duration"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textColorHint="#999999"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageTrackBlack"
        app:layout_constraintStart_toStartOf="@+id/imageTrackBlack"
        app:layout_constraintTop_toBottomOf="@+id/txtDurationMonthlyLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>